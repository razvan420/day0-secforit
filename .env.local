# Application Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# API Configuration
API_RATE_LIMIT=100
CACHE_DURATION=1800

# External API Keys (Optional - for enhanced features)
# GITHUB_TOKEN=your_github_personal_access_token_here
# NVD_API_KEY=your_nvd_api_key_here

# Security Configuration
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# Monitoring and Analytics (Optional)
# SENTRY_DSN=your_sentry_dsn_here
# GOOGLE_ANALYTICS_ID=your_ga_id_here
# MIXPANEL_TOKEN=your_mixpanel_token_here

# Contact Information
CONTACT_EMAIL=security@example.com
SUPPORT_EMAIL=support@example.com

# Feature Flags
ENABLE_EPSS_SCORING=true
ENABLE_GITHUB_ADVISORIES=true
ENABLE_SOURCE_MONITORING=true
ENABLE_EXPORT_FEATURES=true
ENABLE_REAL_TIME_UPDATES=true

# Performance Configuration
RSS_CACHE_TTL=1800
API_TIMEOUT=30000
MAX_VULNERABILITIES_PER_SOURCE=20

# Development Configuration (Development Only)
NODE_ENV=development
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Production Configuration (Production Only)
# NODE_ENV=production
# NEXT_PUBLIC_BASE_URL=https://yourdomain.com
# CORS_ORIGIN=https://yourdomain.com
# DEBUG_MODE=false
# VERBOSE_LOGGING=true

# Database Configuration (If using a database in future)
# DATABASE_URL=postgresql://username:password@localhost:5432/zeroday_intelligence
# REDIS_URL=redis://localhost:6379

# Third-party Integrations (Optional)
# SLACK_WEBHOOK_URL=your_slack_webhook_url_here
# DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
# TEAMS_WEBHOOK_URL=your_teams_webhook_url_here

# Notification Configuration
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_WEBHOOK_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# Content Security Policy
CSP_REPORT_URI=https://yourdomain.com/api/csp-report

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# Backup and Export Configuration
BACKUP_ENABLED=false
EXPORT_FORMAT=json
MAX_EXPORT_SIZE=10000

# Custom API Endpoints (Advanced Configuration)
CUSTOM_CISA_ENDPOINT=https://www.cisa.gov/sites/default/files/feeds/known_exploited_vulnerabilities.json
CUSTOM_NVD_ENDPOINT=https://services.nvd.nist.gov/rest/json/cves/2.0
CUSTOM_GITHUB_ENDPOINT=https://api.github.com/advisories
CUSTOM_EPSS_ENDPOINT=https://api.first.org/data/v1/epss

# Vulnerability Filtering Configuration
MIN_CVSS_SCORE=7.0
MAX_AGE_DAYS=90
INCLUDE_UNSCORED_VULNS=true
SEVERITY_FILTER=critical,high

# RSS Feed Configuration
RSS_TITLE=Zero-Day Intelligence Feed
RSS_DESCRIPTION=Real-time zero-day and critical vulnerability intelligence
RSS_LANGUAGE=en-us
RSS_TTL=30
RSS_MAX_ITEMS=50

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300000
HEALTH_CHECK_TIMEOUT=10000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_ENABLED=false
LOG_FILE_PATH=/var/log/zeroday-intelligence.log

# Security Scanning Configuration
ENABLE_DEPENDENCY_CHECK=true
ENABLE_SECURITY_SCAN=true
SCAN_SCHEDULE=0 2 * * *

# Internationalization (Future Feature)
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de,it,pt,ja,ko,zh

# Advanced Features (Enterprise)
ENABLE_API_VERSIONING=false
ENABLE_MULTI_TENANT=false
ENABLE_SSO=false
ENABLE_RBAC=false